{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./gradlew",
            "args": [
                "build",
                "--no-daemon"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
